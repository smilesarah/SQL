INSERT INTO nanogram (name, level) VALUES ("Mr. Heckles", "2");
INSERT INTO nanogram (name, level) VALUES ("Janice", "3");

#1. Add a last name for the user named Janice.
UPDATE nanogram SET name = "Janice Litman-Goralnik"
WHERE name = "Janice";

#2. Correct the spelling for Regina's last name.
UPDATE nanogram SET name = "Regina Phalange" WHERE name = "Regina Falange";

#2. Add another user to the table.
INSERT INTO nanogram (name, level) VALUES ("Richard Burke", "22");

#3. Add a badge field to the table and set default to 'unknown.'
ALTER TABLE nanogram ADD badge TEXT default "unknown";

#4. Create badge names based on levels 0-5, 6-20
BEGIN TRANSACTION;
UPDATE nanogram SET badge = "beginner" WHERE level <6;
UPDATE nanogram SET badge = "intermediate" WHERE level >= 6;
UPDATE nanogram SET badge = "advanced" WHERE level >20;
COMMIT;

#5. Delete a user from the table.
DELETE FROM nanogram WHERE name = "Mr. Heckles";
