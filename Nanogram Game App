ALTER TABLE nanogram ADD badge TEXT default "unknown";

INSERT INTO nanogram (name, level, badge) VALUES ("Richard Burke", "22", "intermediate");

SELECT * FROM nanogram;

BEGIN TRANSACTION;
UPDATE nanogram SET badge = "beginner" WHERE level <6;
UPDATE nanogram SET badge = "intermediate" WHERE level >= 6;
UPDATE nanogram SET badge = "advanced" WHERE level >19;
COMMIT;

